{
  "system": "QuickBooks",
  "report_type": "GL Balance",
  "report_name": "Trial Balance",
  "extraction_method": "pdfplumber",
  "description": "QuickBooks trial balance report",
  "column_mappings": {
    "Account": "account_code",
    "Account Name": "account_name",
    "Debit": "debit",
    "Credit": "credit",
    "Balance": "amount"
  },
  "sign_indicators": {
    "negative_format": "parentheses",
    "credit_indicator": null
  },
  "date_format": "%m/%d/%Y",
  "amount_format": {
    "thousands_separator": ",",
    "decimal_separator": ".",
    "decimal_places": 2
  },
  "skip_patterns": [
    "^TOTAL",
    "^Total",
    "^Page \\d+",
    "^Accrual Basis"
  ],
  "extraction_hints": {
    "table_detection": "auto",
    "header_row": 0,
    "data_start_row": 1,
    "has_account_hierarchy": true
  },
  "notes": "QuickBooks may indent sub-accounts in the report"
}
